{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      // This needs to be mirrored in babel.config.js
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "constants/*": ["src/constants/*"],
      "context/*": ["src/context/*"],
      "hooks/*": ["src/hooks/*"],
      "navigation/*": ["src/navigation/*"],
      "screens/*": ["src/screens/*"]
    }
  }
}
